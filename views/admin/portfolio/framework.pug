extends ../../layout.pug

block content
  #block.col-lg-8.col-md-8.col-xs-12
    .block-content
      .middle
        each framework in frameworks
          li=framework.name

  #block.col-lg-4.col-md-4.col-xs-12
    .block-content
      .top
        .title= 'Creation'
        form(method='POST', action='./framework/create')
          .middle
            .form-group
              label(for='name') Name of the new framework
              input.form-control(type='text', name='name')
            .form-group
              label(for='color') Choose a color
              select.form-control(name='color')
                each color, index in colors
                  option(value=color)= color
          .bottom
            input.btn.btn-xs.btn-primary.col-md-12(type='submit', value='Add')
