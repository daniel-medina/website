extends ../layout.pug

block content
  #authentication.col-lg-12.col-md-12.col-sm-12.col-xs-12
    .wrapper
      .block.col-lg-6.col-md-6.col-sm-8.col-xs-12
        form(method='POST')
          .header
            | Administration login
          .content
            .form-group
              input.form-control(type='text' name='username' placeholder='Username')
            .form-group
              input.form-control(type='password' name='password' placeholder='Password')
            label
              input(type='checkbox' autocomplete='off')
              |  Remember me
          .footer
            input.btn.btn-sm.btn-success(type='submit' value='Login')
